{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src", 
    "moduleResolution": "node", 
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "experimentalDecorators": true
  },
  "exclude":[
    "./node_modules"
  ],
  "watch": "./**/*.ts",
  "execMap": {
    "ts": "ts-node"
  }
}